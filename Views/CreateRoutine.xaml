<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"  
             x:Class="GymTracker.Views.CreateRoutine"  
             Shell.NavBarIsVisible="False"> 
    <VerticalStackLayout Spacing="50">  
        <controls:Entry x:Name="RoutineName"  
                        Placeholder="Routine name"  
                        WidthRequest="300"  
                        HorizontalOptions="Center"
                        Text="{Binding CurrentRoutineName}"
                        FontSize="30"
                        Margin="20,20,0,0"/>
        <Label
            Text="Add some exercises, then add details to your routine."
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Welcome to DogoTracker app" />
        <Button  
            Text="Continue"  
            Command="{Binding AddExerciseCommand}"  
            HorizontalOptions="Center"
            BackgroundColor="#008cff"
            BorderColor="#008cff"
            Background="Blue"
            BorderWidth="1"
            TextColor="White"
            WidthRequest="300"/>
    </VerticalStackLayout>  
</ContentPage>