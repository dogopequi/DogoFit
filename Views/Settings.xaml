<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTracker.Views.Settings"
             x:Name="settings"
             Title="Settings"
             BackgroundColor="Black">
    <VerticalStackLayout Spacing="20" Margin="0,20,0,0">
        <Button
        Text="GitHub"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BorderColor="Black"
        Background="#2b2b2b"
        TextColor="LightGray"
        FontAttributes="Bold"
        WidthRequest="200"
        BorderWidth="1"
        Command="{Binding GitHubCommand}"/>
        <Button
        Text="Export"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BorderColor="Black"
        Background="#2b2b2b"
        TextColor="LightGray"
        FontAttributes="Bold"
        WidthRequest="200"
        BorderWidth="1"
        Clicked="Export"/>
        <Button
        Text="Import"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BorderColor="Black"
        Background="#2b2b2b"
        TextColor="LightGray"
        FontAttributes="Bold"
        WidthRequest="200"
        BorderWidth="1"
        Clicked="Import"/>
        <Button
        Text="Exercises"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BorderColor="Black"
        Background="#2b2b2b"
        TextColor="LightGray"
        FontAttributes="Bold"
        WidthRequest="200"
        BorderWidth="1"
        Clicked="ExercisePopup_Clicked"/>
        <Button
        Text="{Binding Profile.WeightUnit, StringFormat='Weight Unit: {0}'}"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BorderColor="Black"
        Background="#2b2b2b"
        TextColor="LightGray"
        FontAttributes="Bold"
        WidthRequest="200"
        BorderWidth="1"
        Command="{Binding UnitSystemCommand}"/>
    </VerticalStackLayout>
</ContentPage>