<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTracker.Views.Settings"
             x:Name="settings"
             Title="Settings"
             BackgroundColor="Black">
    <VerticalStackLayout Spacing="20" Margin="0,20,0,0">
        <Button
        Text="GitHub"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BackgroundColor="Black"
        BorderColor="Black"
        Background="Black"
        TextColor="LightGray"
        FontAttributes="Bold"
        BorderWidth="1"
        Command="{Binding GitHubCommand}"/>
        <Button
        Text="Export"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BackgroundColor="Black"
        BorderColor="Black"
        Background="Black"
        TextColor="LightGray"
        FontAttributes="Bold"
        BorderWidth="1"
        Command="{Binding ExportCommand}"/>
        <Button
        Text="Import"
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        BackgroundColor="Black"
        BorderColor="Black"
        Background="Black"
        TextColor="LightGray"
        FontAttributes="Bold"
        BorderWidth="1"
        Command="{Binding ImportCommand}"/>
    </VerticalStackLayout>
</ContentPage>