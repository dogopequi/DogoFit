<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTracker.Views.EditRoutine"
             xmlns:controls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"  
             Title="EditRoutine"
             Shell.NavBarIsVisible="False"
             x:Name="editroutine"
             BackgroundColor="Black"
             xmlns:services="clr-namespace:GymTracker.Services">
    <Grid Padding="10" RowDefinitions="Auto,*,Auto" RowSpacing="0">
        <controls:Entry x:Name="RoutineName"   Grid.Row="0" 
                        Placeholder="{Binding routine.Name}"  
                        WidthRequest="300"  
                        HorizontalOptions="Center"
                        Text="{Binding routine.Name}"
                        FontSize="20"/>
        <ScrollView Grid.Row="1">

            <VerticalStackLayout x:Name="vstack" Spacing="10" Padding="10" Margin="5">
        </VerticalStackLayout>
        </ScrollView>
        <VerticalStackLayout Grid.Row="2" Spacing="10" Margin="0,20,0,0">
            <Button Text="Add Exercise"  
                Command="{Binding AddExerciseCommand}"
                HorizontalOptions="Center"
                BackgroundColor="#2b2b2b"
                TextColor="White"
                WidthRequest="300"/>

            <Button Text="Save"  
                Command="{Binding SaveEditedRoutineCommand}"
                HorizontalOptions="Center"
                BackgroundColor="#008cff"
                TextColor="White"
                WidthRequest="300"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>