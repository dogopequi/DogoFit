<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTracker.MainPage"
             x:Name="mainpage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Black">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20" Margin="0,0,0,40">
            <Image x:Name="logo" Source="logo.png" HeightRequest="185" Aspect="AspectFit" />
            <Label x:Name="DataLabel" Text="No workouts have been recorded." HorizontalTextAlignment="Center" HorizontalOptions="Center" FontSize="20" TextColor="White"/>
            <Frame BorderColor="Black" CornerRadius="10" Padding="10" Margin="5">
                <VerticalStackLayout x:Name="vstack" Spacing="20">

                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
