<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTracker.MainPage"
             x:Name="mainpage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Black">

    <Grid RowDefinitions="Auto,Auto,Auto,*, Auto" Padding="10" HorizontalOptions="CenterAndExpand">

        <Image x:Name="logo"
               Source="logo.png"
               HeightRequest="150"
               Aspect="AspectFit"
               Grid.Row="0"/>

        <Label x:Name="DataLabel"
               Text="No workouts have been recorded."
               HorizontalTextAlignment="Center"
               HorizontalOptions="Center"
               FontSize="20"
               TextColor="White"
               Grid.Row="1"/>
        <VerticalStackLayout  x:Name="SearchStack" Spacing="10" Grid.Row="2">
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <DatePicker x:Name="StartPicker" Format="dd/MM/yyyy"/>
                <DatePicker x:Name="EndPicker" Format="dd/MM/yyyy"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
            <Button x:Name="SearchButton"
                Text="Search"
                TextColor="White"
                BackgroundColor="#2b2b2b"
                HorizontalOptions="Center"
                Margin="0,0,0,0"/>
                <Button x:Name="ClearButton"
                Text="Clear"
                TextColor="White"
                BackgroundColor="#2b2b2b"
                HorizontalOptions="Center"
                Margin="0,0,0,0"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <CollectionView x:Name="collectionView" Margin="0,20,0,0" BackgroundColor="Black" HorizontalOptions="CenterAndExpand"
                        Grid.Row="3">
            <CollectionView.Footer>
                <Button x:Name="loadMoreButton"
                Text="Load More"
                TextColor="White"
                BackgroundColor="#2b2b2b"
                WidthRequest="200"
                HorizontalOptions="Center"
                Margin="0,20,0,20"
                IsVisible="False"/>
            </CollectionView.Footer>
        </CollectionView>

    </Grid>
</ContentPage>

