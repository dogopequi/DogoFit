<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GymTracker.Workout"
             x:Name="WorkoutPage"
             BackgroundColor="Black"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Spacing="39">
        <Label 
            Text="Routines"
            Style="{StaticResource Headline}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            Margin="0,20,0,0"/>
        <Button
            Text="Add Routine"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            BackgroundColor="Blue"
            BorderColor="White"
            Background="Blue"
            Padding="20"
            WidthRequest="200"
            TextColor="LightGray"
            FontAttributes="Bold"
            FontSize="17"
            Command="{Binding AddRoutineCommand}" />
            <Frame Margin="0" HorizontalOptions="Center" Padding="20" BorderColor="Black" CornerRadius="8">
                <VerticalStackLayout HorizontalOptions="Center" Spacing="20">
                    <Label Text="{Binding WorkoutInProgress.Name}"
                VerticalOptions="Center"
                HorizontalOptions="Center"
                FontSize="20"
                IsVisible="{Binding WorkoutInProgress, Converter={StaticResource NullToBoolConverter}}" />


                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="20"
            IsVisible="{Binding WorkoutInProgress, Converter={StaticResource NullToBoolConverter}}">
                        <Button Text="Resume"
            Command="{Binding ResumeWorkoutInProgressCommand}"
            BackgroundColor="Black" TextColor="White" FontAttributes="Bold"
            BorderColor="Blue"
            BorderWidth="1"/>

                        <Button Text="Discard"
            Command="{Binding DiscardWorkoutInProgressCommand}"
            BackgroundColor="Black" TextColor="White" FontAttributes="Bold"
            BorderColor="Red"
            BorderWidth="1"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>

            <Label 
            Text="{Binding RoutinesCount, StringFormat='My Routines ({0})'}"
            Style="{StaticResource SubHeadline}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <CollectionView 
            ItemsSource="{Binding Routines}">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="5" HorizontalOptions="Center" Padding="20" BorderColor="Gray" CornerRadius="8">
                    <VerticalStackLayout HorizontalOptions="Center">
                        <Label Text="{Binding Name}"
                                   VerticalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   HorizontalOptions="Center"
                                  MaxLines="5"
                               LineBreakMode="WordWrap"
                               Padding="5"
                               Margin="0,0,0,10"
                               FontAttributes="Bold"
                               TextColor="LightGray"
                               FontSize="17"/>
                            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
                                <Button
                                Text="Start"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center"
                                BackgroundColor="Black"
                                BorderColor="Blue"
                                Background="Black"
                                TextColor="White"
                                FontAttributes="Bold"
                                BorderWidth="1"
                                Command="{Binding BindingContext.StartWorkoutCommand, Source={x:Reference Name=WorkoutPage}}"
                                CommandParameter="{Binding .}" />
                                <Button
                                Text="Delete"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center"
                                BackgroundColor="Black"
                                BorderColor="Red"
                                Background="Black"
                                TextColor="White"
                                FontAttributes="Bold"
                                BorderWidth="1"
                                Command="{Binding BindingContext.DeleteRoutineCommand, Source={x:Reference Name=WorkoutPage}}"
                                CommandParameter="{Binding .}" />
                                <Button
                                Text="Edit"
                                VerticalOptions="Center" 
                                HorizontalOptions="Center"
                                BackgroundColor="Black"
                                BorderColor="Green"
                                Background="Black"
                                TextColor="White"
                                FontAttributes="Bold"
                                BorderWidth="1"
                                Command="{Binding BindingContext.EditRoutineCommand, Source={x:Reference Name=WorkoutPage}}"
                                CommandParameter="{Binding .}" />
                                </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
    </ScrollView>
</ContentPage>